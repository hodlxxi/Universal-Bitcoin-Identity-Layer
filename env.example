# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=false
FLASK_SECRET_KEY=your-secret-key-here-change-in-production

# Application Settings
APP_NAME=HODLXXI
APP_VERSION=1.0.0-alpha
APP_HOST=0.0.0.0
APP_PORT=5000

# Bitcoin RPC Configuration
RPC_HOST=127.0.0.1
RPC_PORT=8332
RPC_USER=bitcoinrpc
RPC_PASSWORD=change-me-in-production
RPC_WALLET=

# JWT Configuration
JWT_SECRET=dev-secret-CHANGE-ME-IN-PRODUCTION
JWT_ALGORITHM=RS256
JWT_ISSUER=http://localhost:5000
JWT_AUDIENCE=hodlxxi
JWT_EXPIRATION_HOURS=24
JWKS_DIR=keys

# Token Configuration
TOKEN_TTL=3600

# LNURL Configuration
LNURL_BASE_URL=http://localhost:5000

# TURN Server Configuration (for WebRTC)
TURN_HOST=turn.example.com
TURN_PORT=3478
TURN_USER=user
TURN_PASS=pass

# CORS Configuration
CORS_ORIGINS=*
SOCKETIO_CORS=*

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DEFAULT=100/hour

# Security Configuration
FORCE_HTTPS=false
SECURE_COOKIES=false
CSRF_ENABLED=false

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Database Configuration (PostgreSQL)
# Use either DATABASE_URL or individual DB_* variables
DATABASE_URL=postgresql://hodlxxi:password@localhost:5432/hodlxxi
# DB_HOST=localhost
# DB_PORT=5432
# DB_USER=hodlxxi
# DB_PASSWORD=your-db-password
# DB_NAME=hodlxxi

# Redis Configuration
# Use either REDIS_URL or individual REDIS_* variables
REDIS_URL=redis://localhost:6379/0
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=your-redis-password
# REDIS_DB=0

# Session Configuration
SESSION_LIFETIME_HOURS=24
